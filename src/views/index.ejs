<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css" rel="stylesheet">
    <title>Document</title>
</head>

<body style="padding-top: 75px;">
    <!-- NavBar Begin-->
    <nav class="navbar fixed-top navbar-dark bg-dark">
        <span class="navbar-brand mb-0 h1">Navbar</span>
    </nav>
    <!-- NavBar End-->

    <!-- Page Content -->
    <div class="container">
        <div class="row">

            <div class="col" style="background-color: #e6e8ed">
                <br>
                <h5>Transaction Record</h5>
                <br>
                
                <% for (var i = 0; i < bankTransactions.length; i++) { %>
                <br>
                <div class="d-flex justify-content-center" style="width: 90%; background-color:cadetblue">
                    <div class="justify-items-start" style="width: 20%"><%= bankTransactions[i].date %></div>
                    <div class="justify-items-start" style="width: 20%"><%= bankTransactions[i].name %></div>
                    <div class="justify-items-start" style="width: 20%"><%= bankTransactions[i].location.city %></div>
                    <div class="justify-items-start" style="width: 20%"><%= bankTransactions[i].location.region %></div>
                    <div class="justify-items-start" style="width: 20%"><%= bankTransactions[i].amount %></div>
                </div>
                <% } %>
                <br><br>
            </div>
            
        </div>
    </div>



    <!-- script references -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>

</html>