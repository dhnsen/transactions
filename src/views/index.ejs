<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css" rel="stylesheet">
    <title>Document</title>
    
</head>

<body style="padding-top: 75px;">
    <!-- NavBar Begin-->
    <nav class="navbar fixed-top navbar-dark bg-dark">
        <span class="navbar-brand mb-0 h1">Navbar</span>
    </nav>
    <!-- NavBar End-->

    <!-- Page Content -->


    <div class="container d-flex flex-column" style="background-color: #e6e8ed">
        <br>
        <h5>Transaction Record</h5>
        <br>

        <% for (var i = 0; i < bankTransactions.length; i++) { %>

        <div class="align-self-center row" <% if (bankTransactions[i].category.includes("Restaurants")) { %>
            style="width: 96%; background-color: pink;" <% } else if (i % 2) { %>
            style="width: 96%; background-color:#d6d6d6;" <% } else { %> style="width: 96%; background-color: white;"
            <% } %>>
            <span class="col"><%= bankTransactions[i].date %></span>
            <span class="col"><%= bankTransactions[i].name %></span>
            <span class="col"><%= bankTransactions[i].location.city %>,
                <%= bankTransactions[i].location.region %></span>
            <span class="col"><%= bankTransactions[i].category %></span>
            <span class="col" style="text-align: right"><%= bankTransactions[i].amount.toFixed(2) %></span>
        </div>
        <% } %>
        <br><br>
    </div>




    <!-- script references -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>

</html>